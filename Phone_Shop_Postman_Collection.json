                                    "type": "text"
                                },
                                {
                                    "key": "password_confirm",
                                    "value": "123456",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/register",
                            "host": ["{{base_url}}"],

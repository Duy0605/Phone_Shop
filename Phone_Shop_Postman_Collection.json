{
    "info": {
        "name": "Phone Shop API",
        "description": "API Collection for Phone Shop - Website bán điện thoại",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost/Phone_Shop/Phone_Shop/public",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Products",
            "item": [
                {
                    "name": "1.1 Get All Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products",
                            "host": ["{{base_url}}"],
                            "path": ["products"]
                        }
                    }
                },
                {
                    "name": "1.2 Get Product Detail",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/product/iphone-15-pro-max-256gb",
                            "host": ["{{base_url}}"],
                            "path": ["product", "iphone-15-pro-max-256gb"]
                        }
                    }
                },
                {
                    "name": "1.3 Search Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products/search?q=iphone",
                            "host": ["{{base_url}}"],
                            "path": ["products", "search"],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "iphone"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "1.4 Filter by Brand",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products?brand=apple&price_min=10000000&price_max=30000000",
                            "host": ["{{base_url}}"],
                            "path": ["products"],
                            "query": [
                                {
                                    "key": "brand",
                                    "value": "apple"
                                },
                                {
                                    "key": "price_min",
                                    "value": "10000000"
                                },
                                {
                                    "key": "price_max",
                                    "value": "30000000"
                                }
                            ]
                        }
                    }
                }
            ]
        },
